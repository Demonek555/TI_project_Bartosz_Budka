
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/layout.css" rel="stylesheet" />
    <style>
        .fakeimg {
        height: 200px;
        background: #aaa;
        }
    </style>
</head>
<body>

    <div class="p-5 bg-primary text-white text-center">
        <h1>My First Bootstrap 5 Page</h1>
        <p>Resize this responsive page to see the effect!</p>
    </div>

    @(await Component.InvokeAsync("Menu"))
    
    @RenderBody()
    <div class="mt-5 p-4 bg-dark text-white text-center">
        <a href="@Url.Action("footerSites", "Home", new { viewName = "Omnie" })">O mnie</a>
        <a href="@Url.Action("footerSites", "Home", new { viewName = "MetodyPlatnosci" })">Metody płatności</a>
        <a href="@Url.Action("footerSites", "Home", new { viewName = "Regulamin" })">Regulamin</a>
        <a href="@Url.Action("footerSites", "Home", new { viewName = "Kontakt" })">Kontakt</a>
    </div>
    
</body>
</html>
